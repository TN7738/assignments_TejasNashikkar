extends layout
include _includes/sharedHTMLfunctions

block content
    .atf-wrap
        .container.d-flex.flex-column.justify-content-center.align-items-center.h-100.text-white.wrapper 
            .container.pt-4
                .row 
                    .col-12.col-md-8.ml-auto.mr-auto
                        ul.pl-0.phonelist
                            li.list-unstyled.mt-5
                                .card
                                    .card-block.d-flex.justify-content-between.align-items-center
                                        .img-wrapper.d-flex.justify-content-center.align-items-center
                                            img(src=`/images/${currentPhone.image}`, alt=`${currentPhone.image}`).w-100
                                        .w-50.pr-5.d-flex.flex-column.justify-content-center.align-items-center.h-100.txt-blck
                                            p.h2 #{currentPhone.name}
                                            p.h6.pt-3.text-center.storages
                                                span.ttl Storage:
                                                each storage in currentPhone.storage_options
                                                    - let currStorage = storage 
                                                    - if(currStorage == 1){
                                                    -     currStorage+='TB'
                                                    - }
                                                    - else{
                                                    -     currStorage+='GB'
                                                    - }
                                                    span.storage= currStorage
                                            p.pt-3.text-center.colors.d-flex.justify-content-between.align-items-center
                                                span.ttl Colors:
                                                each color in currentPhone.colors
                                                    span.color(style=`background-color: ${color}`)
                                            p.h6.pt-3.text-center
                                                span.ttl Price: 
                                                span= currentPhone.price
            .container.review-wrap
                .row 
                    .col-12.col-md-8.ml-auto.mr-auto
                        p.h2.text-center Reviews
                        ul.pl-0.reviewlist.d-flex.justify-content-between.align-items-center.pt-3
                            each review in currentPhone.reviews 
                                li.list-unstyled
                                    .card
                                        .card-block
                                            p.h2 #{review.customerName}
                                            p.h6.pt-3 #{review.reviewText}
                                            p.h6.pt-3 
                                                +outputRating(review.rating)
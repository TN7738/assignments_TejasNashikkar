extends layout

block content
    .atf-wrap
        .container.d-flex.flex-column.justify-content-center.align-items-center.h-100.text-white.wrapper 
            h1= title
            p.tl Here is a list of latest phones
            .arrow
    .container.pt-4.mb-5
        .row 
        .col-12.col-md-8.ml-auto.mr-auto
            ul.pl-0.phonelist
            each phone in phones
                li.list-unstyled.mt-5
                    .card
                        .card-block.d-flex.justify-content-between.align-items-center
                            .img-wrapper.d-flex.justify-content-center.align-items-center
                                img(src=`/images/${phone.image}`, alt=`${phone.image}`).w-100
                            .w-50.pr-5.d-flex.flex-column.justify-content-center.align-items-center.h-100.txt-blck
                                p.h2 #{phone.name}
                                p.h6.pt-3.text-center.storages
                                    span.ttl Storage:
                                    each storage in phone.storage_options
                                        - let currStorage = storage 
                                        - if(currStorage == '1'){
                                        -     currStorage+='TB'
                                        - }
                                        - else{
                                        -     currStorage+='GB'
                                        - }
                                        span.storage= currStorage
                                p.pt-3.text-center.colors.d-flex.justify-content-between.align-items-center
                                    span.ttl Colors:
                                    each color in phone.colors
                                        span.color(style=`background-color: ${color}`)
                                p.h6.pt-3.text-center
                                    span.ttl Price: 
                                    span= phone.price
                                p.h6.pt-3.text-center
                                    a(href=`/phone-info/${phone._id}`) View Details
            p 
                a(href='/new').d-flex.justify-content-center.align-items-center.add-new-btn Add New Phone
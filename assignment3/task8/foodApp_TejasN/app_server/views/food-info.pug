extends layout

block content
    h2= currentFood.foodItem
    .container.pt-4
        .row 
        .col-12.col-md-8.ml-auto.mr-auto
            ul.pl-0.foodlist
                li.list-unstyled
                .card
                    .card-block.d-flex.justify-content-between.align-items-center
                        .w-50.pr-5.d-flex.flex-column.justify-content-center.align-items-center.h-100.txt-blck
                            p.h6.pt-3.text-center= currentFood.description
                            p.h6.pt-3.text-center 
                                span.bold Calories: 
                                span= currentFood.calories
                            p.h6.pt-3.text-center 
                                span.bold Price: 
                                span= currentFood.price
                        img(src=`/images/${currentFood.img}`, alt=`${currentFood.img}`).w-50